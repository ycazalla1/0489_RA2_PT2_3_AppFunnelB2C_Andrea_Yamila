<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Imagen anime decorativa -->
        <ImageView
            android:id="@+id/register_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon_nube"
            android:scaleType="centerCrop"
            android:layout_marginTop="40dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu viaje otaku comienza aquí"
            android:textColor="#3A7BD5"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/register_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regístrate o inicia sesión para empezar a explorar"
            android:textColor="#808080"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <!-- Correo electrónico -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:hint="Correo electrónico"
            android:padding="12dp"
/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            android:padding="12dp"

            android:inputType="textPassword"/>

        <!-- Botón Registrar / Iniciar sesión -->
        <Button
            android:id="@+id/btn_register_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registrar / Iniciar sesión"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3A7BD5"
            android:layout_marginTop="24dp"/>

        <!-- Opción de registro rápido (Google) -->
        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registrarse con Google"
            android:textSize="16sp"
            android:textColor="#3A7BD5"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
